@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<center>
    <table width="100%">
        <tbody>
            <tr>
                <td>
                    <div>

                        <p style="text-align:center;margin-bottom:30px">
                            <img style="border:0;height:auto;line-height:100%;outline:none;text-decoration:none;width:400px;" src="@Model.link_logo" />
                        </p>
                        <div style="box-sizing:border-box;margin:0;padding:0 40px">
                            <h2 style="text-align:left">Xin chào,</h2>
                            <p style="text-align:left">Hệ thống Asta.</p>
                            <p style="text-align:left"><b>Đề nghị chờ thanh toán:</b></p>
                            <table style="width:100%">
                                <thead style="background:#f1f5fa;">
                                    <tr>
                                        <td style="padding:10px;">Mã</td>
                                        <td style="padding:10px;">Tên đề nghị</td>
                                        <td style="padding:10px;">Tổng giá trị</td>
                                        <td style="padding:10px;">Đường dẫn</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.data)
                                    {
                                        <tr>
                                            <td style="padding:10px;">@item.code</td>
                                            <td style="padding:10px;">@item.name</td>
                                            <td style="padding:10px;">@(item.muahang_chonmua.tonggiatri.ToString("#,##0.##") + " " + item.muahang_chonmua.tiente)</td>
                                            <td style="padding:10px;"><a href="@(Model.Domain + "/muahang/edit/" + item.id)" target="_blank">Link</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <p>Đường dẫn:</p>
                            <p style="text-align:center;">
                                <a href="@Model.link" style="padding: 10px 30px;
    background: #ffb009;
    color: white;
    text-decoration: none;
    font-size: 13px;
    border-radius: 5px;">Xem chi tiết</a>
                            </p>
                            <p style="text-align:left">Trân trọng.</p>
                            <p style="text-align:left">ASTA</p>
                            <br>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</center>